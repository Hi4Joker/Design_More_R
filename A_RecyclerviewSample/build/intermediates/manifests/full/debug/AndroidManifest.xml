<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sqisland.android.recyclerview"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sqisland.android.recyclerview.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sqisland.android.recyclerview.LinearLayoutActivity"
            android:label="@string/linear_layout"
            android:parentActivityName="com.sqisland.android.recyclerview.MainActivity" />
        <activity
            android:name="com.sqisland.android.recyclerview.GridLayoutActivity"
            android:label="@string/grid_layout"
            android:parentActivityName="com.sqisland.android.recyclerview.MainActivity" />
        <activity
            android:name="com.sqisland.android.recyclerview.GridLayoutVariableSpanSizeActivity"
            android:label="@string/grid_layout_variable_span_size"
            android:parentActivityName="com.sqisland.android.recyclerview.MainActivity" />
        <activity
            android:name="com.sqisland.android.recyclerview.GridLayoutHeaderActivity"
            android:label="@string/grid_layout_header"
            android:parentActivityName="com.sqisland.android.recyclerview.MainActivity" />
        <activity
            android:name="com.sqisland.android.recyclerview.GridLayoutAutoFitActivity"
            android:label="@string/grid_layout_auto_fit"
            android:parentActivityName="com.sqisland.android.recyclerview.MainActivity" />
        <activity
            android:name="com.sqisland.android.recyclerview.GridLayoutAutoFitHeaderActivity"
            android:label="@string/grid_layout_auto_fit_header"
            android:parentActivityName="com.sqisland.android.recyclerview.MainActivity" />
        <activity
            android:name="com.sqisland.android.recyclerview.GridLayoutAddRemoveActivity"
            android:label="@string/grid_layout_add_remove"
            android:parentActivityName="com.sqisland.android.recyclerview.MainActivity" />
        <activity
            android:name="android.support.v7.widget.TestActivity"
            android:label="RecyclerViewTestActivity" />
    </application>

</manifest>