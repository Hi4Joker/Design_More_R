<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:exitFadeDuration="200">
  <item android:state_window_focused="false" android:drawable="@color/default_background"/>

  <item android:state_focused="true" android:state_pressed="true" android:state_enabled="false"
      android:drawable="@color/default_background"/>
  <item android:state_focused="true" android:state_enabled="false"
      android:drawable="@color/default_background"/>
  <item android:state_focused="true" android:state_pressed="true" android:state_enabled="true"
      android:drawable="@color/done_background"/>
  <item android:state_focused="false" android:state_pressed="true"
      android:drawable="@color/done_background"/>

  <!--android:drawable="@color/lighter_gray"/>-->

</selector>