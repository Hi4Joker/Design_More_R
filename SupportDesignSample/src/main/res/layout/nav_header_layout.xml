<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimaryDark"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical"
    android:gravity="bottom"
    >
  <!--android:background="?attr/colorPrimaryDark"-->
  <com.joker.supportdesign.ui.SweetLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="-60dip"
      >
    <!-- android:layout_width="@dimen/nav_header_avatar_size"
        android:layout_height="@dimen/nav_header_avatar_size"-->
    <ImageView
        android:id="@+id/nav_header_profile_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/nav_header_background"
        />
  </com.joker.supportdesign.ui.SweetLayout>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="40dip"
      android:text="Username"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

</LinearLayout>