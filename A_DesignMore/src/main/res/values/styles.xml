<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <!--<item name="colorAccent">@android:color/white</item>-->
  </style>

  <style name="SplashTheme" parent="AppTheme">
    <item name="android:background">@drawable/splash_background</item>
  </style>

  <style name="AppTheme.TransparentActivity">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowIsTranslucent">true</item>
  </style>

  <style name="AppTheme.WhiteActivity">
    <item name="android:windowBackground">@android:color/white</item>
    <item name="android:windowIsTranslucent">false</item>
  </style>

  <!--登陆界面，ET风格-->
  <style name="login_layout_et_style">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_marginTop">@dimen/material_8dp</item>
    <item name="android:layout_marginBottom">@dimen/material_8dp</item>
    <item name="android:layout_marginLeft">@dimen/material_72dp</item>
    <item name="android:layout_marginRight">@dimen/material_24dp</item>
    <item name="android:singleLine">true</item>
    <item name="android:textSize">@dimen/material_14sp</item>
    <item name="android:textStyle">italic</item>
    <item name="android:background">@drawable/transparent_background</item>
  </style>

  <!--登录界面,注册、找回密码TV风格-->
  <style name="login_layout_tv_btn_style">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:textSize">@dimen/material_12sp</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:gravity">bottom</item>
    <item name="android:clickable">true</item>
  </style>

  <!-- 登陆界面icon风格-->
  <style name="login_icon_style">
    <item name="android:layout_width">@dimen/material_24dp</item>
    <item name="android:layout_height">@dimen/material_24dp</item>
    <item name="android:layout_marginLeft">@dimen/material_24dp</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:scaleType">centerCrop</item>
  </style>

  <!--分割线分割，1dip-->
  <style name="divider_line_style">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dip</item>
    <item name="android:layout_marginLeft">@dimen/material_24dp</item>
    <item name="android:layout_marginRight">@dimen/material_24dp</item>
    <item name="android:background">@android:color/darker_gray</item>
  </style>

  <!--用户中心条目，TV风格-->
  <style name="center_item_tv_style">
    <item name="android:layout_width">0dip</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_marginLeft">@dimen/material_16dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:gravity">center|start</item>
    <item name="android:textSize">@dimen/material_14sp</item>
    <item name="android:textColor">#bb3B3B3B</item>
  </style>

  <!--用户中心条目中，跳转箭头风格-->
  <style name="center_navigate_iv_style">
    <item name="android:layout_width">@dimen/material_16dp</item>
    <item name="android:layout_height">@dimen/material_16dp</item>
    <item name="android:layout_marginRight">@dimen/material_24dp</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:layout_alignParentRight">true</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_centerInParent">true</item>
    <item name="android:src">@drawable/ic_navigate</item>
  </style>

  <!-- 帮助中心，cardView风格-->
  <style name="Widget.CardContent" parent="android:Widget">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingLeft">@dimen/material_8dp</item>
    <item name="android:paddingRight">@dimen/material_8dp</item>
    <item name="android:paddingTop">@dimen/material_16dp</item>
    <item name="android:paddingBottom">@dimen/material_16dp</item>
    <item name="android:orientation">vertical</item>
  </style>

  <!--底部导航栏，图标风格-->
  <style name="bottom_bar_icon_style">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_alignParentTop">true</item>
    <item name="android:layout_marginTop">@dimen/material_8dp</item>
    <item name="android:layout_marginBottom">@dimen/material_2dp</item>
    <item name="android:layout_centerInParent">true</item>
    <item name="android:scaleType">center</item>
  </style>

  <!--底部导航栏，文字风格-->
  <style name="bottom_bar_text_style">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_alignParentBottom">true</item>
    <item name="android:layout_centerInParent">true</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">@dimen/material_12sp</item>
  </style>

  <style name="AnimTop" parent="@android:style/Animation">
    <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
    <item name="android:windowExitAnimation">@anim/slide_out_top</item>
  </style>

  <style name="AnimCenter" parent="@android:style/Animation">
    <item name="android:windowEnterAnimation">@anim/fade_in_center</item>
    <item name="android:windowExitAnimation">@anim/fade_out_center</item>
  </style>

  <style name="AnimBottom" parent="@android:style/Animation">
    <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
    <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
  </style>

  <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
    <item name="android:textSize">@dimen/material_16sp</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
    <item name="android:textSize">@dimen/material_18sp</item>
    <item name="android:textColor">@color/black</item>
  </style>


</resources>
