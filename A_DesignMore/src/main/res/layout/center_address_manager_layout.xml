<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/address_manager_layout_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <include layout="@layout/include_white_toolbar_layout"/>


  <com.app.designmore.view.ProgressLayout
      android:id="@+id/address_manager_layout_pl"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:progressEmptyStateBackgroundColor="@android:color/holo_blue_dark"
      app:progressEmptyStateContentTextColor="#FFFFFF"
      app:progressEmptyStateTitleTextColor="#FFFFFF"
      app:progressErrorStateBackgroundColor="@android:color/holo_red_dark"
      app:progressErrorStateButtonTextColor="#FFFFFF"
      app:progressErrorStateContentTextColor="#FFFFFF"
      app:progressErrorStateTitleTextColor="#FFFFFF"
      android:background="@color/primary_background_color"
      >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/address_manager_layout_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/primary_background_color"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/test_background"
        />
  </com.app.designmore.view.ProgressLayout>

</LinearLayout>