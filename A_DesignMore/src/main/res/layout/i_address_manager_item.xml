<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/material_16dp"
    android:orientation="vertical"
    android:background="@color/primary_background_color"
    >

  <!--姓名和手机号LinearLayout-->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/material_40dp"
      android:paddingLeft="@dimen/material_16dp"
      android:orientation="horizontal"
      android:background="@color/white"
      >
    <TextView
        android:id="@+id/address_manager_item_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text=""
        android:textSize="@dimen/material_13sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/address_manager_item_phone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/material_16dp"
        android:layout_marginLeft="@dimen/material_16dp"
        android:gravity="center_vertical"
        android:text=""
        android:textSize="@dimen/material_13sp"
        android:textColor="@color/black"
        />
  </LinearLayout>

  <!--地址 LinearLayout-->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/material_40dp"
      android:paddingLeft="@dimen/material_16dp"
      android:orientation="horizontal"
      android:background="@color/white"
      >
    <TextView
        android:id="@+id/address_manager_item_address"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="top"
        android:text=""
        android:textSize="@dimen/material_13sp"
        android:textColor="@color/black"
        />
  </LinearLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/material_40dp"
      android:layout_marginTop="@dimen/material_1dp"
      android:paddingLeft="@dimen/material_16dp"
      android:background="@color/white"
      >

    <!--<com.app.designmore.view.MaterialCheckBox
        android:id="@+id/address_manager_item_radio_btn"
        android:layout_width="@dimen/material_32dp"
        android:layout_height="@dimen/material_32dp"
        android:layout_centerVertical="true"
        app:background_color="@color/holo_red_light"
        app:border_color="@color/darker_gray"
        app:doneShape_color="@color/white"
        app:border_width="@dimen/material_1dp"
        />-->

    <ImageButton
        android:id="@+id/address_manager_item_radio_btn"
        android:layout_width="@dimen/material_32dp"
        android:layout_height="@dimen/material_32dp"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:src="@drawable/ic_radio_normal_icon_icon"
        android:background="@drawable/transparent_background"
        />

    <TextView
        android:layout_toRightOf="@id/address_manager_item_radio_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/material_2dp"
        android:gravity="center"
        android:text="默认地址"
        android:textSize="@dimen/material_12sp"
        android:textColor="@color/black"
        />

    <com.app.designmore.view.MaterialRippleLayout
        android:layout_width="@dimen/material_56dp"
        android:layout_height="@dimen/material_32dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/material_16dp"
        app:mrl_rippleDimension="4dip"
        app:mrl_rippleFadeDuration="100"
        app:mrl_rippleAlpha="0.4"
        app:mrl_rippleDuration="600"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleDelayClick="true"
        app:mrl_rippleColor="@color/darker_gray"
        >
      <Button
          android:id="@+id/address_manager_item_delete_btn"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_gravity="center"
          android:gravity="center"
          android:text="删除"
          android:background="@drawable/white_corner_background"
          />
    </com.app.designmore.view.MaterialRippleLayout>

    <com.app.designmore.view.MaterialRippleLayout
        android:layout_width="@dimen/material_56dp"
        android:layout_height="@dimen/material_32dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/material_80dp"
        app:mrl_rippleDimension="4dip"
        app:mrl_rippleFadeDuration="100"
        app:mrl_rippleAlpha="0.4"
        app:mrl_rippleDuration="600"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleDelayClick="true"
        app:mrl_rippleColor="@color/darker_gray"
        >
      <Button
          android:id="@+id/address_manager_item_editor_btn"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_gravity="center"
          android:gravity="center"
          android:text="编辑"
          android:background="@drawable/white_corner_background"
          />
        <!--android:background="@drawable/search_tv_background"-->
    </com.app.designmore.view.MaterialRippleLayout>
  </RelativeLayout>

</LinearLayout>