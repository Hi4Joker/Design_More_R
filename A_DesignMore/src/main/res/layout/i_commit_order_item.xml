<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/material_8dp"
    android:background="@color/white"
    >

  <ImageView
      android:id="@+id/commit_order_item_good_iv"
      android:layout_width="@dimen/material_100dp"
      android:layout_height="@dimen/material_100dp"
      android:layout_marginTop="@dimen/material_8dp"
      android:layout_marginBottom="@dimen/material_8dp"
      android:scaleType="centerCrop"
      />

  <RelativeLayout
      android:layout_toRightOf="@+id/commit_order_item_good_iv"
      android:layout_width="match_parent"
      android:layout_height="@dimen/material_100dp"
      android:layout_marginRight="@dimen/material_56dp"
      android:layout_marginTop="@dimen/material_8dp"
      android:layout_marginBottom="@dimen/material_8dp"
      >

    <TextView
        android:id="@+id/commit_order_item_good_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/material_8dp"
        android:layout_marginRight="@dimen/material_8dp"
        android:textColor="@color/black"
        android:textSize="@dimen/material_13sp"
        android:text="这是商品名称这是商品名称这是商品名称"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/material_24dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >

      <!--颜色-->
      <TextView
          android:id="@+id/commit_order_item_good_attr_tv"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginLeft="@dimen/material_8dp"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          android:gravity="center"
          android:textColor="@color/darker_gray"
          android:textSize="@dimen/material_11sp"
          android:text="商品属性"
          />

      <TextView
          android:id="@+id/commit_order_item_good_count_tv"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginLeft="@dimen/material_8dp"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          android:gravity="center"
          android:textColor="@color/darker_gray"
          android:textSize="@dimen/material_11sp"
          android:text="商品数量"
          />
    </LinearLayout>
  </RelativeLayout>

  <TextView
      android:id="@+id/commit_order_item_price_tv"
      android:layout_width="@dimen/material_56dp"
      android:layout_height="@dimen/material_100dp"
      android:layout_marginTop="@dimen/material_8dp"
      android:layout_marginBottom="@dimen/material_8dp"
      android:layout_alignParentRight="true"
      android:gravity="start|center_vertical"
      android:textSize="@dimen/material_12sp"
      android:textColor="@color/design_more_red"
      android:text=""
      />


</RelativeLayout>
