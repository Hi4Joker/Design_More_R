<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_128dp"
    android:orientation="vertical"
    android:background="@android:color/white"
    >

  <!-- <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       app:cardCornerRadius="@dimen/material_corners"
       app:elevation="@dimen/material_elevation_2dp"
       >-->
  <com.app.designmore.view.MaterialRippleLayout
      android:layout_width="match_parent"
      android:layout_height="0dip"
      android:layout_weight="1"
      android:layout_gravity="center"
      app:mrl_rippleDimension="20dip"
      app:mrl_rippleFadeDuration="100"
      app:mrl_rippleAlpha="0.4"
      app:mrl_rippleDuration="600"
      app:mrl_rippleHover="true"
      app:mrl_rippleOverlay="true"
      app:mrl_rippleDelayClick="true"
      >

    <TextView
        android:id="@+id/pick_sex_male_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/material_16sp"
        android:text="男"
        android:clickable="true"
        />
  </com.app.designmore.view.MaterialRippleLayout>

  <ImageView style="@style/divider_line_style"/>

  <com.app.designmore.view.MaterialRippleLayout
      android:layout_width="match_parent"
      android:layout_height="0dip"
      android:layout_weight="1"
      android:layout_gravity="center"
      app:mrl_rippleDimension="20dip"
      app:mrl_rippleFadeDuration="100"
      app:mrl_rippleAlpha="0.4"
      app:mrl_rippleDuration="600"
      app:mrl_rippleHover="true"
      app:mrl_rippleOverlay="true"
      app:mrl_rippleDelayClick="true"
      >

    <TextView
        android:id="@+id/pick_sex_female_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/material_16sp"
        android:text="女"
        android:clickable="true"
        />
  </com.app.designmore.view.MaterialRippleLayout>

  <ImageView style="@style/divider_line_style"/>

  <com.app.designmore.view.MaterialRippleLayout
      android:layout_width="match_parent"
      android:layout_height="0dip"
      android:layout_weight="1"
      android:layout_gravity="center"
      app:mrl_rippleDimension="20dip"
      app:mrl_rippleFadeDuration="100"
      app:mrl_rippleAlpha="0.4"
      app:mrl_rippleDuration="600"
      app:mrl_rippleHover="true"
      app:mrl_rippleOverlay="true"
      app:mrl_rippleDelayClick="true"
      >

    <TextView
        android:id="@+id/pick_sex_cancel_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@android:color/holo_red_light"
        android:textSize="@dimen/material_16sp"
        android:text="取消"
        android:clickable="true"
        />
  </com.app.designmore.view.MaterialRippleLayout>


</LinearLayout>