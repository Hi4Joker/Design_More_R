<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

  <com.app.designmore.view.MaterialRippleLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="@dimen/material_8dp"
      android:layout_marginBottom="1dip"
      app:mrl_rippleDimension="20dip"
      app:mrl_rippleFadeDuration="100"
      app:mrl_rippleAlpha="0.4"
      app:mrl_rippleDuration="600"
      app:mrl_rippleHover="true"
      app:mrl_rippleOverlay="true"
      app:mrl_rippleDelayClick="true"
      app:mrl_rippleColor="@color/darker_gray"
      >

    <LinearLayout
        android:id="@+id/order_address_item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/material_80dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >

      <TextView
          android:id="@+id/order_address_item_tv"
          android:layout_width="0dip"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:padding="@dimen/material_16dp"
          android:gravity="start|center_vertical"
          android:text=""
          android:textSize="@dimen/material_13sp"
          android:textColor="@color/black"
          />

      <ImageButton
          android:id="@+id/order_address_item_radio_btn"
          android:layout_width="@dimen/material_32dp"
          android:layout_height="@dimen/material_32dp"
          android:layout_gravity="center_vertical"
          android:scaleType="center"
          android:background="@drawable/transparent_background"
          />
    </LinearLayout>
  </com.app.designmore.view.MaterialRippleLayout>

</LinearLayout>