<?xml version="1.0" encoding="utf-8"?>

<com.app.designmore.revealLib.widget.RevealFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/center_layout_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    >
  <com.app.designmore.view.ProgressLayout
      android:id="@+id/center_layout_pl"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:progressEmptyStateBackgroundColor="@android:color/holo_blue_dark"
      app:progressEmptyStateContentTextColor="#FFFFFF"
      app:progressEmptyStateTitleTextColor="#FFFFFF"
      app:progressErrorStateBackgroundColor="@android:color/holo_red_dark"
      app:progressErrorStateButtonTextColor="#FFFFFF"
      app:progressErrorStateContentTextColor="#FFFFFF"
      app:progressErrorStateTitleTextColor="#FFFFFF"
      >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/center_layout_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_248dp"
        android:orientation="vertical"
        android:background="#000000"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

      <include layout="@layout/include_transparent_toolbar_layout"/>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <ImageView
            android:id="@+id/user_center_layout_avatar_iv"
            android:layout_width="@dimen/material_72dp"
            android:layout_height="@dimen/material_72dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            />
        <TextView
            android:layout_below="@id/user_center_layout_avatar_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_24dp"
            android:gravity="center"
            android:textSize="@dimen/material_16sp"
            android:textColor="@android:color/white"
            android:text="小鄧子"
            />
      </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_below="@id/center_layout_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/primary_background_color"
        >
      <!--购物车-->
      <com.app.designmore.view.MaterialRippleLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/material_48dp"
          android:layout_marginBottom="1dip"
          app:mrl_rippleDimension="20dip"
          app:mrl_rippleFadeDuration="100"
          app:mrl_rippleAlpha="0.4"
          app:mrl_rippleDuration="600"
          app:mrl_rippleHover="true"
          app:mrl_rippleOverlay="true"
          app:mrl_rippleDelayClick="true"
          app:mrl_rippleColor="@android:color/darker_gray"
          >
        <LinearLayout
            android:id="@+id/center_layout_trolley_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@android:color/white"
            >

          <ImageView
              android:layout_width="@dimen/material_24dp"
              android:layout_height="@dimen/material_24dp"
              android:layout_gravity="center"
              android:layout_marginLeft="@dimen/material_24dp"
              android:layout_centerVertical="true"
              android:scaleType="centerCrop"
              android:src="@drawable/center_trolley_icon"
              />
          <TextView
              android:text="购物车"
              style="@style/center_item_tv_style"
              />

          <ImageView
              style="@style/center_navigate_iv_style"/>
        </LinearLayout>
      </com.app.designmore.view.MaterialRippleLayout>

      <!--我的订单-->
      <com.app.designmore.view.MaterialRippleLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/material_48dp"
          android:layout_marginBottom="1dip"
          app:mrl_rippleDimension="20dip"
          app:mrl_rippleFadeDuration="100"
          app:mrl_rippleAlpha="0.4"
          app:mrl_rippleDuration="600"
          app:mrl_rippleHover="true"
          app:mrl_rippleOverlay="true"
          app:mrl_rippleDelayClick="true"
          app:mrl_rippleColor="@android:color/darker_gray"
          >
        <LinearLayout
            android:id="@+id/center_layout_order_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@android:color/white"
            >
          <ImageView
              android:layout_width="@dimen/material_24dp"
              android:layout_height="@dimen/material_24dp"
              android:layout_gravity="center"
              android:layout_marginLeft="@dimen/material_24dp"
              android:layout_centerVertical="true"
              android:scaleType="centerCrop"
              android:src="@drawable/center_order_icon"
              />
          <TextView
              android:text="我的订单"
              style="@style/center_item_tv_style"/>
          <ImageView
              style="@style/center_navigate_iv_style"/>
        </LinearLayout>
      </com.app.designmore.view.MaterialRippleLayout>

      <!--我的收藏-->
      <com.app.designmore.view.MaterialRippleLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/material_48dp"
          android:layout_marginBottom="1dip"
          app:mrl_rippleDimension="20dip"
          app:mrl_rippleFadeDuration="100"
          app:mrl_rippleAlpha="0.4"
          app:mrl_rippleDuration="600"
          app:mrl_rippleHover="true"
          app:mrl_rippleOverlay="true"
          app:mrl_rippleDelayClick="true"
          app:mrl_rippleColor="@android:color/darker_gray"
          >
        <LinearLayout
            android:id="@+id/center_layout_favorite_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@android:color/white"
            >
          <ImageView
              android:layout_width="@dimen/material_24dp"
              android:layout_height="@dimen/material_24dp"
              android:layout_gravity="center"
              android:layout_marginLeft="@dimen/material_24dp"
              android:layout_centerVertical="true"
              android:scaleType="centerCrop"
              android:src="@drawable/center_favorite_icon"
              />
          <TextView
              android:text="我的收藏"
              style="@style/center_item_tv_style"/>
          <ImageView
              style="@style/center_navigate_iv_style"/>
        </LinearLayout>
      </com.app.designmore.view.MaterialRippleLayout>


      <!--个人资料-->
      <com.app.designmore.view.MaterialRippleLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/material_48dp"
          android:layout_marginBottom="1dip"
          app:mrl_rippleDimension="20dip"
          app:mrl_rippleFadeDuration="100"
          app:mrl_rippleAlpha="0.4"
          app:mrl_rippleDuration="600"
          app:mrl_rippleHover="true"
          app:mrl_rippleOverlay="true"
          app:mrl_rippleDelayClick="true"
          app:mrl_rippleColor="@android:color/darker_gray"
          >
        <LinearLayout
            android:id="@+id/center_layout_information_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@android:color/white"
            >
          <ImageView
              android:layout_width="@dimen/material_24dp"
              android:layout_height="@dimen/material_24dp"
              android:layout_gravity="center"
              android:layout_marginLeft="@dimen/material_24dp"
              android:layout_centerVertical="true"
              android:scaleType="centerCrop"
              android:src="@drawable/center_information_icon"
              />
          <TextView
              android:text="个人资料"
              style="@style/center_item_tv_style"/>
          <ImageView
              style="@style/center_navigate_iv_style"/>
        </LinearLayout>
      </com.app.designmore.view.MaterialRippleLayout>

      <!--地址管理-->
      <com.app.designmore.view.MaterialRippleLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/material_48dp"
          android:layout_marginBottom="1dip"
          app:mrl_rippleDimension="20dip"
          app:mrl_rippleFadeDuration="100"
          app:mrl_rippleAlpha="0.4"
          app:mrl_rippleDuration="600"
          app:mrl_rippleHover="true"
          app:mrl_rippleOverlay="true"
          app:mrl_rippleDelayClick="true"
          app:mrl_rippleColor="@android:color/darker_gray"
          >
        <LinearLayout
            android:id="@+id/center_layout_address_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@android:color/white"
            >
          <ImageView
              android:layout_width="@dimen/material_24dp"
              android:layout_height="@dimen/material_24dp"
              android:layout_gravity="center"
              android:layout_marginLeft="@dimen/material_24dp"
              android:layout_centerVertical="true"
              android:scaleType="centerCrop"
              android:src="@drawable/center_address_icon"
              />
          <TextView
              android:text="地址管理"
              style="@style/center_item_tv_style"/>
          <ImageView
              style="@style/center_navigate_iv_style"/>
        </LinearLayout>
      </com.app.designmore.view.MaterialRippleLayout>

      <!--消息-->
      <com.app.designmore.view.MaterialRippleLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/material_48dp"
          app:mrl_rippleDimension="20dip"
          app:mrl_rippleFadeDuration="100"
          app:mrl_rippleAlpha="0.4"
          app:mrl_rippleDuration="600"
          app:mrl_rippleHover="true"
          app:mrl_rippleOverlay="true"
          app:mrl_rippleDelayClick="true"
          app:mrl_rippleColor="@android:color/darker_gray"
          >
        <LinearLayout
            android:id="@+id/center_layout_message_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@android:color/white"
            >
          <ImageView
              android:layout_width="@dimen/material_24dp"
              android:layout_height="@dimen/material_24dp"
              android:layout_gravity="center"
              android:layout_marginLeft="@dimen/material_24dp"
              android:layout_centerVertical="true"
              android:scaleType="centerCrop"
              android:src="@drawable/center_message_icon"
              />
          <TextView
              android:text="消息"
              style="@style/center_item_tv_style"/>
          <ImageView
              style="@style/center_navigate_iv_style"/>
        </LinearLayout>
      </com.app.designmore.view.MaterialRippleLayout>
    </LinearLayout>

  </com.app.designmore.view.ProgressLayout>
</com.app.designmore.revealLib.widget.RevealFrameLayout>



