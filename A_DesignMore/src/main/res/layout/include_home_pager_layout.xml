<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="@dimen/material_160dp" tools:showIn="@layout/home_layout">

    <android.support.v4.view.ViewPager
        android:id="@+id/home_layout_viewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_160dp"
        android:layout_gravity="top"
        android:background="@color/white"
        android:overScrollMode="never"
        />

    <LinearLayout
        android:id="@+id/home_layout_pager_indicator_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="@dimen/material_4dp"
        android:orientation="horizontal"
        >

    </LinearLayout>
</RelativeLayout>